{
  "name": "YourApp",
  "description": "A PHP app with PostgreSQL on Heroku",
  "repository": "https://github.com/yourusername/yourapp.git",
  "language": "php",
  "stack": "heroku-22",
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ],
  "env": {
    "DATABASE_URL": {
      "description": "The URL to the PostgreSQL database",
      "required": true
    }
  },
  "scripts": {
    "postdeploy": "php db-migrate.php"
  }
}
